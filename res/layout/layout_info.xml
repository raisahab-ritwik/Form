<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_bmf_logo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:src="@drawable/bmf_logo_big" />

    <TextView
        android:id="@+id/tv_info_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_bmf_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/info_text_bmf"
        android:textColor="#FD7E00"
        android:textSize="20sp" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tv_version_no"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv_info_message_text"/>

</RelativeLayout>