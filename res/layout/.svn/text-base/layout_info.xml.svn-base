<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_bmf_logo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bmf_logo_big" />

    <TextView
        android:id="@+id/tv_info_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_bmf_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/info_text_bmf"
        android:textColor="@color/orange"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_version_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_bmf_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/info_version_number"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_version_no"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/info_copyright"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>